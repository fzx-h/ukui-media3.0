/*音量描述label*/
QLabel{
    background:transparent;
    border:0px;
    color:#ffffff;
    font-size:14px;
}

/*音量值label*/
QLabel#displayVolumeLabel{
    color: #ffffff;
    font-size: 18px;
    font-weight: bold;
}

QCheckBox
{
    spacing: 5px;

}

/*右击菜单*/
QAction {
    font-color: rgb(255,255,255);
}

/*静音按钮*/
QPushButton{
    background-color: rgba(21,26,30,90%);
    border-left: 0px;
}

/*滑动条slider*/
QSlider::groove:horizontal {
    border: 0px solid #bbb;

}
QSlider::sub-page:horizontal {
    background: #2e8ad2;
    border-radius: 2px;
    margin-top:8px;
    margin-bottom:9px;
}
QSlider::add-page:horizontal {
    background:  rgba(52,70,80,90%);
    border: 0px solid #777;
    border-radius: 2px;
    margin-top:8px;
    margin-bottom:9px;
}
QSlider::handle:horizontal {
    width: 20px;
    height: 20px;
    background: rgb(0, 160, 230);
    border-radius:10px;
}

/*菜单*/
QMenu {
    background-color: rgba(8,10,12,90%);
    border: 1px solid #626c6e;
    border-radius: 2px;
    padding: 4px 2px 4px 2px;
}

QMenu::item {
    font-size: 14px;
    color: #ffffff;
    height: 34px;
    width: 244px;
}

QMenu::item:selected{
    background-color: rgba(190,216,239,20%);
}

QMenu::item:pressed{
    background-color: rgb(190,216,239);
}

/*弹出窗口*/
QMainWindow{
    background-color: rgba(21,26,30,90%);
    border: 1px solid #626c6e;
}

QWidget{
    background-color: rgba(21,26,30,90%);
    border-radius: 2px;

}

QWidget#muteWid{
    background: transparent;
}


/*托盘图标*/
QSystemTrayIcon::hover{
    background-color: rgba(190,216,239,20%);
}

QSystemTrayIcon::pressed{
    background-color: rgba(190,216,239,12%);
}

QCheckBox {
   width:16px;
   height:16px;
}

QCheckBox::indicator:unchecked {
   image:url(/usr/share/ukui-media/data/img/settings.svg);
}

QCheckBox::indicator:checked {
   image:url(/usr/share/ukui-media/data/img/tick.svg);
}
